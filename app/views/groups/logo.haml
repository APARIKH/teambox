- form_for @group, :html => {:multipart => true, :class => 'image_upload'} do |f|
  %input{:name => 'only_logo', :type => 'hidden', :value => '1'}/
  %fieldset{ :style => 'padding: 15px' }
    %legend= t('.current')
    - if @group.has_logo?
      %img{:src => @group.logo.url(:top), :alt => @group.name, :style => "height:24px"}/
      = link_to t('.delete'), logo_group_path(@group), :method => :delete
    - else
      %img{:src => "/images/header_logo_black.png", :alt => @group.name, :style => "height:24px"}/
    %div
      = f.file_field :logo
    %p{ :style => 'font-size:12px; margin: 15px 0' }= t('.description')
    %div
      = f.submit t('.upload')
